<core:FragmentDefinition
    id="SociedadFragment"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="vh_Sociedad_Dialog"
        title="{i18n>buscarRangoSociedad}"
        draggable="true"
        resizable="true"
        contentWidth="40%"
        busyIndicatorDelay="0"
        busy="{requestModel>/Global/isBusyVH}"
    >
        <VBox class="sapUiSmallMargin">
            <Label text="{i18n>sociedad_inicial}" />
            <Input
                id="sociedad_inicio"
                placeholder="{i18n>sociedad_inicial}"
                value="{requestModel>/Global/sociedad_inicio}"
                showSuggestion="true"
                suggest="onSuggestSociedad"
                suggestionItems="{
                    path: 'sociedadModel>/',
                    sorter: { path: 'bukrs' }
                }">
                <suggestionItems>
                    <core:ListItem
                        text="{sociedadModel>bukrs}"
                        additionalText="{sociedadModel>butxt}" />
                </suggestionItems>
            </Input>

            <Label text="{i18n>sociedad_final}" />
            <Input
                id="sociedad_fin"
                placeholder="{i18n>sociedad_final}"
                value="{requestModel>/Global/sociedad_fin}"
                showSuggestion="true"
                suggest="onSuggestSociedad"
                suggestionItems="{
                    path: 'sociedadModel>/',
                    sorter: { path: 'bukrs' }
                }">
                <suggestionItems>
                    <core:ListItem
                        text="{sociedadModel>bukrs}"
                        additionalText="{sociedadModel>butxt}" />
                </suggestionItems>
            </Input>
        </VBox>

        <beginButton>
            <Button
                text="{i18n>incluirBusqueda}"
                press="includeSociedad"
                class="sapUiTinyMarginTop" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>fragment.borrarRango}"
                press="onClose_VH_Sociedad" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
